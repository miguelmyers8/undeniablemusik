<div class='container'>
  <div class="flex-container">
    <div id='rob' class="col-sm-4"></div>
    <div id='amhad' class="col-sm-3"></div>
    <div id='youn' class="col-sm-4"></div>
  </div>
</div>

<p id="notice"><%= notice %></p>
<#%=link_to (image_tag owner.image.url(:large) ), owner_path(owner) %>
<h1>Owners</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>


      <tr>
        <td><%= owner.name %></td>
        <td><%= owner.content %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path %>
